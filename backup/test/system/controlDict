FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleDyMFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         1;

adjustTimeStep	yes;

deltaT		1e-7;

maxDeltaT	1e-4;

maxCo		0.5;

writeControl    timeStep;

writeInterval   30;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    AirFoil_1
    {
        type            forces;
        functionObjectLibs ( "libforces.so" );
        outputControl   timeStep;
        outputInterval  30;

        patches
        (
            patch1
        );
        pName       p;
        UName       U;
        log         true;
        rhoName     rhoInf;
	    rhoInf	    1000;
        CofR        (0 0 0);
    }
    AirFoil_2
    {
        type            forces;
        functionObjectLibs ( "libforces.so" );
        outputControl   timeStep;
        outputInterval  30;

        patches
        (
            patch2
        );
        pName       p;
        UName       U;
        log         true;
        rhoName     rhoInf;
	    rhoInf	    1000;
        CofR        (0 0 0);
    }
    AirFoil_3
    {
        type            forces;
        functionObjectLibs ( "libforces.so" );
        outputControl   timeStep;
        outputInterval  30;

        patches
        (
            patch3
        );
        pName       p;
        UName       U;
        log         true;
        rhoName     rhoInf;
	    rhoInf	    1000;
        CofR        (0 0 0);
    }

}

